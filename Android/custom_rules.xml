<?xml version="1.0" encoding="UTF-8"?>

<project name="custom_rules">

<target name="-pre-build">
    <condition property="cdda.flags" value="APP_CFLAGS+=&quot;-DRELEASE=1 -O3&quot; APP_CPPFLAGS+=&quot;-std=c++11 -fsigned-char -ffast-math&quot;" else="APP_CFLAGS+=&quot;-fsigned-char&quot;">
    <!-- <condition property="cdda.flags" value="APP_CFLAGS+=&quot;-DRELEASE=1 -O3&quot; APP_CPPFLAGS+=&quot;-std=c++11 -fsigned-char -fuse-linker=gold -flto-odr-type-merging&quot; APP_LDFLAGS+=&quot;-std=c++11 -fsigned-char -fuse-linker=gold -flto-odr-type-merging&quot;" else=""> -->
        <equals  arg1="${build.is.packaging.debug}" arg2="false" trim="true" /> 
    </condition>

    <condition property="cdda.jobs" value="${env.NUM_JOBS}" else="2">
        <isset property="env.NUM_JOBS" />
    </condition>

    <condition property="cdda.debug" value="1" else="0"> 
        <equals  arg2="${build.is.packaging.debug}" arg1="true" trim="true"/> 
    </condition>
 
    <echo>DEBUG=${build.is.packaging.debug}</echo>
    <echo>NDK_DEBUG=${cdda.debug}</echo>
    <echo>FLAGS=${cdda.flags}</echo>
    <exec executable="${ndk.dir}/ndk-build" failonerror="true"> 
        <arg value="-j${cdda.jobs}" />
        <arg value="V=1" />
        <arg value="NDK_DEBUG=${cdda.debug} " />
        <arg line="${cdda.flags}" />
    </exec>
</target>

<target name="clean" depends="android_rules.clean">
    <exec executable="${ndk.dir}/ndk-build" failonerror="true">
        <arg value="clean"/>
    </exec>
</target>

</project>
